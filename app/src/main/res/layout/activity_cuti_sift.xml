<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".izinsift.izinsiftcuti.CutiSiftActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/titleHeaderCuti"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">


            <ImageView
                android:clickable="true"
                android:onClick="backCuti"
                android:focusable="true"
                android:id="@+id/ivBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                app:srcCompat="@drawable/one_left"
                android:contentDescription="@string/todo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:elevation="10dp"
                android:textStyle="bold"
                android:textColor="@color/text_hitam"
                android:text="@string/cuti"
                />

        </LinearLayout>

        <ScrollView
            android:layout_below="@+id/titleHeaderCuti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvKegiatanCuti"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/list_row_kegiatan" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/kegiatan_lainnya_opsional"
                    android:textColor="@color/font"

                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etKegiatanCutiLainnya"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/backgroundwhiteradius"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:padding="15dp"
                    android:pointerIcon="grab"
                    android:textAlignment="textStart"
                    tools:ignore="RtlCompat"
                    android:textSize="14sp"
                    android:layout_marginBottom="20dp"
                    android:capitalize="sentences"/>


                <TextView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tvSelanjutnya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELANJUTNYA"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/text_putih"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/backgoundovalbirusift"
                    android:onClick="nextKegiatanCuti"
                    />
            </LinearLayout>
        </ScrollView>



    </RelativeLayout>

</RelativeLayout>