<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgoundovalputih"
    android:gravity="center"
    android:padding="20dp"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/emoticon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/one_warning" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/emoticon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peringatan!"
            android:textSize="25sp"
            android:textColor="@color/text_hitam"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/tvTutupDialog"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:src="@drawable/one_close"
            android:focusable="true" />
    </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font"
                android:textSize="16sp"
                android:text="Apakah anda yakin akan keluar?"
                android:textAlignment="textStart"
                android:shadowColor="@color/kuning"
                />


    <TextView
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:id="@+id/tvYakin"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/backgoundovalbirusift"
        android:padding="5dp"
        android:textSize="18sp"
        android:text="Ya"
        android:textStyle="bold"
        android:textColor="@color/text_putih"/>
</LinearLayout>