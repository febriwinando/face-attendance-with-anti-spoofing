<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    tools:context=".rekap.RekapAbsensActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"

        >

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/one_left"
                app:tint="@color/biru"
                android:id="@+id/ivBack"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_toEndOf="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="DAFTAR PRESENSI"
                android:textColor="@color/text_hitam"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/titleHeaderListPresensi"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TableLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginBottom="1dp">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:text="Mulai"
                        android:layout_marginEnd="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/text_hitam"
                        />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:text=":"
                        android:textColor="@color/text_hitam"
                        android:layout_marginEnd="10dp"
                        android:textSize="16sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.AppCompat.Spinner"
                        android:id="@+id/llMulaiRekap"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="-"
                            android:textColor="@color/abuabu_font"
                            android:textSize="16sp"
                            android:id="@+id/tvHariMulaiRekap"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="/"
                            android:textColor="@color/abuabu_font" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="-"
                            android:textSize="16sp"
                            android:textColor="@color/abuabu_font"
                            android:id="@+id/tvBulanTahunMulaiRekap"/>


                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sampai"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/text_hitam"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="@color/text_hitam"
                        android:layout_marginEnd="10dp"
                        android:textSize="16sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.AppCompat.Spinner"
                        android:id="@+id/llSampaiRekap"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="-"

                            android:textColor="@color/abuabu_font"
                            android:id="@+id/tvHariSampaiRekap"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textColor="@color/abuabu_font"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="16sp"
                            android:textColor="@color/abuabu_font"
                            android:id="@+id/tvBulanTahunSampaiRekap"/>
                    </LinearLayout>

                </TableRow>

            </TableLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tampilkan"
                android:textAlignment="center"
                android:background="@drawable/backgroundnavbar"
                android:padding="5dp"
                android:textSize="16sp"
                android:textColor="@color/text_putih"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:id="@+id/tvtTampilkanRekap"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRekapServer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="42dp"
            tools:listitem="@layout/item_rekap_server"
            />
    </LinearLayout>
</LinearLayout>