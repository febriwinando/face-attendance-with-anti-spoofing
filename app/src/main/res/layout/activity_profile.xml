<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@color/putih"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_marginTop="30dp"
        android:id="@+id/rlNavBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="30dp"
            android:id="@+id/ivBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/todo"
            android:elevation="10dp"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/one_left" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROFIL PEGAWAI"
            android:textStyle="bold"
            android:textColor="@color/text_hitam"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:layout_toEndOf="@+id/ivBack"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/llHeaderProfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civProfilPegawai"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_toEndOf="@+id/civProfilPegawai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            >
            <TextView
                android:id="@+id/tvNamaPegawai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/text_hitam"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvNip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/font"/>
        </LinearLayout>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_image_search"
            app:tint="@color/biru_putih"
            />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="100dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informasi Pegawai"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/font"
                android:layout_marginBottom="10dp"
                />

            <TableLayout
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:background="@drawable/backgroundwhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:gravity="center_vertical">

                    <ImageView
                        app:srcCompat="@drawable/ic_jabatan"
                        android:background="@drawable/backgoundovalbirusift"
                        android:padding="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:tint="@color/white"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Jabatan"
                            android:textColor="@color/text_hitam"
                            />
                        <TextView
                            android:id="@+id/tvJabatanEmploy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Staf"
                            android:textColor="@color/font"
                            android:textSize="14sp" />


                    </LinearLayout>

                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:background="@drawable/backgoundovalbirusift"
                        android:padding="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:tint="@color/white"
                        app:srcCompat="@drawable/ic_baseline_person_24" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Pegawai"
                            android:textColor="@color/text_hitam"
                            />
                        <TextView
                            android:id="@+id/tvKelompokEmploy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pengatur (II/c)"
                            android:textSize="14sp"
                            android:textColor="@color/font"
                            />
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:visibility="gone"
                    android:gravity="center_vertical">
                    <ImageView
                        android:background="@drawable/backgoundovalbirusift"
                        android:padding="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:tint="@color/background_color"
                        app:srcCompat="@drawable/ic_group_work" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bidang Aplikasi dan Informatika"
                            android:textSize="14sp"
                            android:textColor="@color/font"
                            />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:visibility="gone"
                    android:gravity="center_vertical">

                    <ImageView
                        android:background="@drawable/backgoundovalbirusift"
                        android:padding="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:tint="@color/background_color"
                        app:srcCompat="@drawable/ic_group_work" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:text="Pengembangan Aplikasi Informatika"
                        android:textSize="16sp"

                        />


                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:background="@drawable/backgoundovalbirusift"
                        android:padding="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:tint="@color/white"
                        app:srcCompat="@drawable/ic_mail" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Email"
                            android:textColor="@color/text_hitam"
                            />
                        <TextView
                            android:id="@+id/tvEmailEmploy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="febriwinando@gmail.com"
                            android:textSize="14sp"
                            android:textColor="@color/font"
                            />
                        </LinearLayout>

                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:background="@drawable/backgoundovalbirusift"
                        android:padding="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:tint="@color/white"
                        app:srcCompat="@drawable/ic_phone_android" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Nomor HP"
                            android:textColor="@color/text_hitam"
                            />
                        <TextView
                            android:id="@+id/tvNoHpEmploye"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="085762183348"
                            android:textSize="14sp"
                            android:textColor="@color/font"
                            />
                        </LinearLayout>
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:background="@drawable/backgoundovalbirusift"
                        android:padding="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:tint="@color/white"
                        app:srcCompat="@drawable/ic_locasi_office" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="OPD"
                            android:textColor="@color/text_hitam"
                            />
                        <TextView
                            android:id="@+id/tvDinasEmploy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jl. M. Akub Hasibuan, Kel. Tanjung Marulak, Kec. Rambutan, Tebing Tinggi"
                            android:textSize="14sp"
                            android:textColor="@color/font"
                            />
                        </LinearLayout>
                </TableRow>


            </TableLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pengaturan Profil"
                android:textStyle="bold"
                android:textColor="@color/font"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                />

            <TableLayout
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:background="@drawable/backgroundwhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:id="@+id/trGantiPassword">

                    <ImageView
                        android:background="@drawable/backgoundovalbirusift"
                        android:padding="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:tint="@color/white"
                        app:srcCompat="@drawable/one_lock" />

                    <TextView
                        android:id="@+id/tvUpdatePassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:textColor="@color/font"
                        android:text="Ganti Password"
                        android:textSize="16sp" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:id="@+id/trPanduanAplikasi"
                    android:gravity="center_vertical">
                    <ImageView
                        android:background="@drawable/backgoundovalbirusift"
                        android:padding="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:tint="@color/white"
                        app:srcCompat="@drawable/ic_panduan" />

                    <TextView
                        android:id="@+id/tvPanduanAplikasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/font"
                        android:layout_marginStart="10dp"
                        android:text="Panduan Aplikasi"
                        android:textSize="16sp" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:background="@drawable/backgoundovalbirusift"
                        android:padding="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:tint="@color/white"
                        app:srcCompat="@drawable/ic_privasi" />

                    <TextView
                        android:id="@+id/tvPrivasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:text="Privasi"
                        android:textColor="@color/font"
                        android:textSize="16sp" />

                </TableRow>



            </TableLayout>
            <LinearLayout
                android:id="@+id/llKeluarProfil"
                android:background="@drawable/backgroundwhite"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:focusable="true"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_power_off"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keluar"
                    android:textSize="16sp"
                    android:textColor="@color/font"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>