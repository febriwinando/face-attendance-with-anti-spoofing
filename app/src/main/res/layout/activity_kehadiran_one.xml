<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_color">

    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlHeaderKehadiranOne">

        <RelativeLayout
            android:layout_marginTop="40dp"
            android:id="@+id/titleHeaderFinalTl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:id="@+id/backTl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="backFinalDinasLuar"
                android:focusable="true"
                tools:ignore="UsingOnClickInXml">


                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/one_left"
                    android:elevation="10dp"
                    android:outlineAmbientShadowColor="@color/font_highlight"
                    android:outlineSpotShadowColor="@color/font_highlight"
                    android:contentDescription="@string/todo" />

            </RelativeLayout>

            <TextView
                android:layout_toEndOf="@+id/backTl"
                android:id="@+id/title_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:elevation="10dp"
                android:textColor="@color/text_hitam"
                android:textStyle="bold"/>


        </RelativeLayout>

    </RelativeLayout>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mapKehadiranOne"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/rlHeaderKehadiranOne"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/llDataKehadiran"
        class="com.google.android.gms.maps.SupportMapFragment"
        />


    <ImageView
        android:visibility="visible"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="2dp"
        app:srcCompat="@drawable/ic_search_location"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:foreground="?attr/selectableItemBackground"
        android:focusable="true"
        android:onClick="fokusLokasi"
        android:background="@drawable/backgroundtranshitam"
        app:layout_constraintBottom_toBottomOf="@+id/mapKehadiranOne"
        app:layout_constraintEnd_toEndOf="@+id/mapKehadiranOne"
        />

    <LinearLayout
        android:id="@+id/llDataKehadiran"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="2"
                android:textAlignment="center"
                android:text="Data Masuk/Pulang Kantor"
                android:textColor="@color/font"
                android:textSize="18sp"
                android:id="@+id/titleDinasLuar"/>

        </LinearLayout>


        <HorizontalScrollView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <com.google.android.material.imageview.ShapeableImageView
                    android:gravity="center_horizontal"
                    android:id="@+id/ivTagingAbsen"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearance="@style/ImageStyle2"
                    />
            </LinearLayout>




        </HorizontalScrollView>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <RadioGroup
                android:id="@+id/rgKehadiran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <RadioButton
                    android:id="@+id/rbtnMasuk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Masuk"
                    android:textColor="@color/text_hitam"
                    android:theme="@style/TextLabel"
                    android:textSize="18sp"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:checked="true"
                    />

                <RadioButton
                    android:id="@+id/rbtnPulang"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pulang"
                    android:textColor="@color/text_hitam"
                    android:textSize="18sp"
                    android:theme="@style/TextLabel"

                    />

            </RadioGroup>

        </LinearLayout>



        <LinearLayout
            android:layout_gravity="center"
            android:id="@+id/llUploadkehadiran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroundnavbar"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="kirimDataDinasLuar"
            android:gravity="center_vertical"
            android:layout_marginBottom="50dp"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KIRIM"
                android:textSize="18sp"
                android:layout_marginEnd="5dp"
                android:textStyle="bold"
                android:textColor="@color/text_putih"/>
            />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>