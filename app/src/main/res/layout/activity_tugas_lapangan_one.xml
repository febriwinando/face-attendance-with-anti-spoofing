<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color">

    <RelativeLayout
        android:layout_marginTop="40dp"
        android:id="@+id/titleHeaderFinalTl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <RelativeLayout
            android:id="@+id/backTl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="backFinalDinasLuar"
            tools:ignore="TouchTargetSizeCheck">


            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/todo"
                android:elevation="10dp"
                android:outlineAmbientShadowColor="@color/font_highlight"
                android:outlineSpotShadowColor="@color/font_highlight"
                app:srcCompat="@drawable/one_left" />

        </RelativeLayout>

        <TextView
            android:layout_toEndOf="@+id/backTl"
            android:id="@+id/title_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:elevation="10dp"
            android:textColor="@color/text_hitam"
            android:textStyle="bold"
            android:outlineAmbientShadowColor="@color/font_highlight"
            android:outlineSpotShadowColor="@color/font_highlight"/>


    </RelativeLayout>

    <androidx.fragment.app.FragmentContainerView
        app:layout_constraintTop_toBottomOf="@+id/titleHeaderFinalTl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/llDataTugasLapangan"
        android:id="@+id/map"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        class="com.google.android.gms.maps.SupportMapFragment"
        />

    <ImageView
        app:layout_constraintBottom_toBottomOf="@+id/map"
        app:layout_constraintEnd_toEndOf="@+id/map"
        android:visibility="visible"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="2dp"
        app:srcCompat="@drawable/ic_search_location"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:foreground="?attr/selectableItemBackground"
        android:focusable="true"
        android:onClick="fokusLokasi"
        android:background="@drawable/backgroundtranshitam"
        />
    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/llDataTugasLapangan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="2"
                android:textAlignment="center"
                android:textColor="@color/font"
                android:textSize="18sp"
                android:id="@+id/titleDinasLuar"/>

        </LinearLayout>

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/tvKegiatanFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backgoundovalkuning"
            android:textColor="@color/text_putih"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:background="@drawable/backgroundnavbarputih"
                    android:focusable="true">


                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivFinalKegiatanTl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:outlineAmbientShadowColor="@color/biru"
                        android:scaleType="centerCrop"
                        android:visibility="visible"
                        app:shapeAppearance="@style/ImageStyle2"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginStart="5dp"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:background="@drawable/backgroundnavbarputih"
                    android:id="@+id/llLampiranDinasLuar"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:onClick="addFotoSuratPerintah"
                    android:focusable="true">


                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:id="@+id/iconLampiran"
                        android:src="@drawable/ic_document_scanner"/>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivSuratPerintahFinalTl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:outlineAmbientShadowColor="@color/biru"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        app:shapeAppearance="@style/ImageStyle2"/>



                </LinearLayout>

            </LinearLayout>


        </HorizontalScrollView>

        <LinearLayout
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="addFotoSuratPerintah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backgoundovalkuning"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_gravity="center"
            android:id="@+id/llPdfDinasLuar"
            android:visibility="gone"
            android:focusable="true">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_document_scanner"
                android:contentDescription="@string/todo" />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textAlignment="inherit"
                android:textColor="@color/putih"
                android:textSize="12sp"

                android:id="@+id/tvSuratPerintah"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >
            <RadioGroup
                android:id="@+id/rgKehadiran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <RadioButton
                    android:id="@+id/rbtnMasuk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/masuk"
                    android:textColor="@color/text_hitam"
                    android:theme="@style/TextLabel"
                    android:textSize="18sp"
                    android:layout_margin="5dp"
                    android:checked="true"
                    />

                <RadioButton
                    android:id="@+id/rbtnPulang"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pulang"
                    android:textColor="@color/text_hitam"
                    android:textSize="18sp"
                    android:theme="@style/TextLabel"

                    />

            </RadioGroup>

        </LinearLayout>



        <LinearLayout
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"
            android:id="@+id/llUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroundnavbar"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="kirimDataDinasLuar"
            android:gravity="center_vertical"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kirim"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"
                android:textColor="@color/text_putih"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>