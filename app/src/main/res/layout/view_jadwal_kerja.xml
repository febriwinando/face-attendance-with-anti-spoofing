<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgoundovalputih"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar Jam Kerja"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/text_hitam"
            />

        <ImageView
            android:id="@+id/ivCloseDaftarJadwalKerja"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/one_close"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
    <TextView
        android:layout_gravity="center"
        android:id="@+id/tvInfoJamKerja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anda tidak memiliki Jam Kerja."
        android:visibility="gone"
        android:textColor="@color/font"
        android:textSize="12sp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvJadwalKerja"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgoundovalbirusift"
        android:layout_margin="10dp"
        android:id="@+id/btnSingkronJadwalKerja"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSingkronJadwal"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SINGKRONKAN"
            android:textColor="@color/text_putih"
            android:textSize="16sp"
            />


    </LinearLayout>

    <ProgressBar
        android:layout_margin="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:indeterminateTint="@color/biru"
        android:layout_gravity="center"
        android:id="@+id/progressBarSingkron"
        android:visibility="gone"
        />

</LinearLayout>