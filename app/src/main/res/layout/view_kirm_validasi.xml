<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/backgoundovalputih"
    android:gravity="center"
    android:padding="10dp"
    android:layout_margin="20dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <ImageView
            android:id="@+id/emoticon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            app:srcCompat="@drawable/one_warning" />

        <LinearLayout
            android:layout_toRightOf="@+id/emoticon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oops!"
                android:textSize="20sp"
                android:textColor="@color/font_highlight"

                android:id="@+id/tvTitleNotif"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font"
                android:textSize="12sp"

                android:shadowColor="@color/kuning"
                android:id="@+id/tvWarning1"
                />


        </LinearLayout>

        <ImageView
            android:id="@+id/tvTutupDialog"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:src="@drawable/one_close"
            android:focusable="true"
            />





    </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catatan: "

            android:layout_marginStart="10dp"
            android:textColor="@color/font"/>

        <EditText
            android:id="@+id/catatanvalidator"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/backgroundwhiteradius"
            android:layout_marginBottom="10dp"
            android:textColor="@color/font"
            android:inputType="textMultiLine"
            android:textAlignment="textStart"
            tools:ignore="RtlCompat"
            android:capitalize="sentences"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="14sp"

            />

        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/btnkirimvalidasi"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textSize="12sp"
            android:textColor="@color/putih"
            android:layout_marginStart="5dp"
            android:background="@drawable/backgroundnavbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yakin, kirim!"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>

</LinearLayout>