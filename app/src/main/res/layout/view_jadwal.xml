<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@drawable/backgoundovalkuning"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_margin="2dp"
            android:id="@+id/txtHariJadwal"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/text_putih"
            android:background="@drawable/backgoundovalbirusift"
            android:padding="5dp"
            android:layout_margin="2dp"
            android:id="@+id/txtMasukJadwal"
            android:textStyle="bold"
            />

        <TextView
            android:textColor="@color/text_putih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textAlignment="center"
            android:background="@drawable/backgoundovalbirusift"
            android:padding="5dp"
            android:layout_margin="2dp"
            android:id="@+id/txtPulangJadwal"

            />
    </LinearLayout>
</RelativeLayout>