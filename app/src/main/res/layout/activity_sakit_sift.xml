<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".izin.sakit.IzinSakitFinalActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleHeaderSakit"
            android:layout_marginBottom="5dp"
            >
                <ImageView
                    android:layout_marginStart="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/ivBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    app:srcCompat="@drawable/one_left"/>



            <TextView
                android:layout_toEndOf="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:textStyle="bold"
                android:elevation="10dp"
                android:text="@string/sakit"
                tools:targetApi="p" />

        </RelativeLayout>

        <ScrollView
            android:layout_below="@+id/titleHeaderSakit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvKegiatanSakit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/list_row_kegiatan" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/penyakit_opsional"
                    android:textColor="@color/font"
                    android:textSize="16sp"
                    />

                <EditText
                    android:id="@+id/etKegiatanSakitLainmya"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/backgroundwhiteradius"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:padding="15dp"
                    android:pointerIcon="grab"
                    android:textAlignment="textStart"
                    tools:ignore="RtlCompat"
                    tools:targetApi="n" />

                <TextView
                    android:id="@+id/tvSelanjutnya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELANJUTNYA"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/text_putih"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/backgoundovalbirusift"
                    android:onClick="nextKegiatanSakit"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>


        </ScrollView>



    </RelativeLayout>
</RelativeLayout>